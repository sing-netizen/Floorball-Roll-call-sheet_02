    <script>
        // é‹å‹•å“¡åå–®
        const athletes = [
            "é™³æ³³å²", "é™³ç´«æ¼©", "ç¾…å˜‰ç†™", "é»ƒé§¿ğ§™—", "ææ–‡ç", 
            "è¨±éŠ˜è³¢", "è¯æ‚…æ©", "å¼µæ¢“è³¢", "ALESIVAN", "é™³æ°¸æ‚…", 
            "å³å®¶ä¿Š", "é™³æ¾¤è³¢", "çŸ³æŒ¯æ˜Ÿ", "å¼µæ€æ¾ˆ"
        ];
        
        // å‡ºå¸­ç‹€æ…‹é¸é …
        const attendanceOptions = [
            { value: "Yes", text: "âœ… å‡ºå¸­" },
            { value: "Abs", text: "ğŸ“ è«‹å‡" },
            { value: "O", text: "âŒ ç„¡æ•…ç¼ºå¸­" },
            { value: "L", text: "â° é²åˆ°" },
            { value: "S", text: "ğŸ¤’ ç—…å‡" },
            { value: "C", text: "ğŸ† å‡ºå¤–æ¯”è³½" }
        ];
        
        // åˆå§‹åŒ–è¡¨æ ¼
        function initTable() {
            const tableBody = document.getElementById('attendanceTableBody');
            tableBody.innerHTML = '';
            
            athletes.forEach((athlete, index) => {
                const row = document.createElement('tr');
                
                // ç·¨è™Ÿ
                const numberCell = document.createElement('td');
                numberCell.textContent = index + 1;
                row.appendChild(numberCell);
                
                // å§“å
                const nameCell = document.createElement('td');
                nameCell.textContent = athlete;
                row.appendChild(nameCell);
                
                // ç‹€æ…‹ä¸‹æ‹‰é¸å–®
                const statusCell = document.createElement('td');
                const select = document.createElement('select');
                select.className = 'attendance-select';
                
                attendanceOptions.forEach(option => {
                    const optionElement = document.createElement('option');
                    optionElement.value = option.value;
                    optionElement.textContent = option.text;
                    select.appendChild(optionElement);
                });
                
                statusCell.appendChild(select);
                row.appendChild(statusCell);
                
                tableBody.appendChild(row);
            });
        }
        
        // ç”Ÿæˆé»åå ±å‘Š
        function generateReport() {
            const date = document.getElementById('trainingDate').value;
            const time = document.getElementById('trainingTime').value;
            const location = document.getElementById('trainingLocation').value;
            const coach = document.getElementById('coach').value;
            
            // ç²å–æ‰€æœ‰å‡ºå¸­ç‹€æ…‹
            const attendanceSelects = document.querySelectorAll('.attendance-select');
            const attendanceData = [];
            
            attendanceSelects.forEach((select, index) => {
                attendanceData.push({
                    name: athletes[index],
                    status: select.value
                });
            });
            
            // è¨ˆç®—çµ±è¨ˆ
            const stats = {};
            attendanceOptions.forEach(option => {
                stats[option.value] = 0;
            });
            
            attendanceData.forEach(item => {
                stats[item.status]++;
            });
            
            // ç”Ÿæˆå ±å‘Š
            let report = `ğŸ“ ä¹’ä¹“çƒBéšŠé å‚™ç­é»åè¨˜éŒ„\n\n`;
            report += `ğŸ“… æ—¥æœŸï¼š${date}\n`;
            report += `ğŸ• æ™‚é–“ï¼š${time}\n`;
            report += `ğŸ“ åœ°é»ï¼š${location}\n`;
            report += `ğŸ‘¨â€ğŸ« è² è²¬æ•™ç·´ï¼š${coach}\n\n`;
            report += `é‹å‹•å“¡å‡ºå¸­æƒ…æ³ï¼š\n`;
            
            attendanceData.forEach((item, index) => {
                const statusText = attendanceOptions.find(opt => opt.value === item.status).text;
                report += `${index + 1}. ${item.name} - ${statusText}\n`;
            });
            
            report += `\nğŸ“Š çµ±è¨ˆï¼š\n`;
            attendanceOptions.forEach(option => {
                report += `${option.text}ï¼š${stats[option.value]}äºº\n`;
            });
            
            const now = new Date();
            const generatedTime = now.toLocaleString('zh-Hant', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            });
            
            report += `\næ­¤è¨˜éŒ„ç”±é»åç³»çµ±è‡ªå‹•ç”Ÿæˆ\nç”Ÿæˆæ™‚é–“ï¼š${generatedTime}`;
            
            document.getElementById('whatsappOutput').textContent = report;
        }
        
        // å‚³é€è‡³WhatsApp
        function sendToWhatsApp() {
            const report = document.getElementById('whatsappOutput').textContent;
            if (!report) {
                alert('è«‹å…ˆç”Ÿæˆé»åå ±å‘Š');
                return;
            }
            
            const encodedReport = encodeURIComponent(report);
            const whatsappUrl = `https://wa.me/?text=${encodedReport}`;
            window.open(whatsappUrl, '_blank');
        }
        
        // è¨­ç½®é»˜èªæ—¥æœŸç‚ºä»Šå¤©
        function setDefaultDate() {
            const today = new Date();
            const year = today.getFullYear();
            const month = String(today.getMonth() + 1).padStart(2, '0');
            const day = String(today.getDate()).padStart(2, '0');
            const todayString = `${year}-${month}-${day}`;
            document.getElementById('trainingDate').value = todayString;
        }
        
        // åˆå§‹åŒ–
        document.addEventListener('DOMContentLoaded', function() {
            initTable();
            setDefaultDate();
            
            document.getElementById('generateReport').addEventListener('click', generateReport);
            document.getElementById('sendWhatsApp').addEventListener('click', sendToWhatsApp);
        });
    </script>
