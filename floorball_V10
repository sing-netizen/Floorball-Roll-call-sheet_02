        // åˆå§‹åŒ–è¡¨æ ¼
        function initTable() {
            const tbody = document.querySelector("#attendance-table tbody");
            tbody.innerHTML = "";
            
            participants.forEach(participant => {
                const row = document.createElement("tr");
                
                // ç¼–å·
                const idCell = document.createElement("td");
                idCell.textContent = participant.id;
                row.appendChild(idCell);
                
                // å§“å
                const nameCell = document.createElement("td");
                nameCell.textContent = participant.name;
                row.appendChild(nameCell);
                
                // æ€§åˆ«
                const genderCell = document.createElement("td");
                genderCell.textContent = participant.gender === "M" ? "ç”·" : "å¥³";
                row.appendChild(genderCell);
                
                // æœºæ„åç§°
                const orgCell = document.createElement("td");
                orgCell.textContent = participant.organization;
                row.appendChild(orgCell);
                
                // å‡ºå¸­çŠ¶æ€
                const statusCell = document.createElement("td");
                statusCell.className = "attendance-cell";
                
                const select = document.createElement("select");
                select.dataset.id = participant.id;
                
                statusOptions.forEach(option => {
                    const optionElement = document.createElement("option");
                    optionElement.value = option.value;
                    optionElement.textContent = option.text;
                    select.appendChild(optionElement);
                });
                
                // é»˜è®¤é€‰æ‹©"å‡ºå¸­"
                select.value = "Yes";
                
                statusCell.appendChild(select);
                row.appendChild(statusCell);
                
                tbody.appendChild(row);
            });
        }

        // ç”Ÿæˆç‚¹åè®°å½•
        function generateAttendanceRecord() {
            const date = document.getElementById("date").value;
            const time = document.getElementById("time").value;
            const location = document.getElementById("location").value;
            const coach = document.getElementById("coach").value;
            
            // è·å–å½“å‰æ—¥æœŸæ—¶é—´
            const now = new Date();
            const generatedTime = now.toLocaleString("zh-Hant", {
                year: "numeric",
                month: "2-digit",
                day: "2-digit",
                hour: "2-digit",
                minute: "2-digit"
            });
            
            // è·å–æ‰€æœ‰å‚ä¸è€…çš„çŠ¶æ€
            const statusSelects = document.querySelectorAll("#attendance-table select");
            const statusMap = {};
            
            statusSelects.forEach(select => {
                statusMap[select.dataset.id] = select.value;
            });
            
            // æŒ‰çŠ¶æ€åˆ†ç±»
            const statusGroups = {};
            statusOptions.forEach(option => {
                statusGroups[option.value] = [];
            });
            
            participants.forEach(participant => {
                const status = statusMap[participant.id];
                statusGroups[status].push(participant);
            });
            
            // ç”Ÿæˆè¾“å‡ºå†…å®¹
            let output = `è½¯å¼æ›²æ£çƒæŠ€æœ¯æ”¹è‰¯è®­ç»ƒç­ç‚¹åè®°å½•\n\n`;
            output += `ğŸ“… æ—¥æœŸï¼š${date || "æœªé€‰æ‹©"}\n`;
            output += `â° æ—¶é—´ï¼š${time}\n`;
            output += `ğŸ“ åœ°ç‚¹ï¼š${location}\n`;
            output += `ğŸ‘¨â€ğŸ« è´Ÿè´£æ•™ç»ƒï¼š${coach}\n\n`;
            
            // æŒ‰çŠ¶æ€è¾“å‡ºå‚ä¸è€…
            statusOptions.forEach(option => {
                const group = statusGroups[option.value];
                if (group.length > 0) {
                    output += `${option.text} (${group.length}äºº)\n`;
                    
                    group.forEach(participant => {
                        output += `  â€¢ ${participant.name} (${participant.gender === "M" ? "ç”·" : "å¥³"}) - ${participant.organization}\n`;
                    });
                    
                    output += `\n`;
                }
            });
            
            output += `\næ­¤è®°å½•ç”±ç‚¹åç³»ç»Ÿè‡ªåŠ¨ç”Ÿæˆ\nç”Ÿæˆæ—¶é—´ï¼š${generatedTime}`;
            
            document.getElementById("output").textContent = output;
        }

        // ä¼ é€è‡³WhatsApp
        function sendToWhatsApp() {
            const output = document.getElementById("output").textContent;
            if (!output) {
                alert("è¯·å…ˆç”Ÿæˆç‚¹åè®°å½•");
                return;
            }
            
            const encodedText = encodeURIComponent(output);
            const whatsappUrl = `https://wa.me/?text=${encodedText}`;
            window.open(whatsappUrl, "_blank");
        }

        // è®¾ç½®é»˜è®¤æ—¥æœŸä¸ºä»Šå¤©
        document.addEventListener("DOMContentLoaded", function() {
            const today = new Date().toISOString().split('T')[0];
            document.getElementById("date").value = today;
            
            initTable();
            
            document.getElementById("generate-btn").addEventListener("click", generateAttendanceRecord);
            document.getElementById("whatsapp-btn").addEventListener("click", sendToWhatsApp);
        });
    </script>
