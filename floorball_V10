        const statusOptions = [
            { value: "Yes", text: "âœ… å‡ºå¸­" },
            { value: "Abs", text: "ğŸ“ è¯·å‡" },
            { value: "O", text: "âŒ æ— æ•…ç¼ºå¸­" },
            { value: "L", text: "â° è¿Ÿåˆ°" },
